{
  "compilerOptions": {
    "rootDir": "src",
    "lib": ["es2015", "DOM"],
    "allowJs": true,
    "target": "es5",
    "noImplicitAny": false,
    "strict": false,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": false,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
